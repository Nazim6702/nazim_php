{% extends 'base.html.twig' %}

{% block title %}Créer un film{% endblock %}

{% block content %}
    <div class="container my-5">
        <h2 class="mb-4 text-center text-primary">
            <i class="fas fa-plus-circle" aria-hidden="true"></i> Ajouter un nouveau film
        </h2>

        <form method="POST" action="/film/create" class="needs-validation shadow p-4 rounded bg-light" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label fw-bold">Titre</label>
                <input type="text" class="form-control" id="title" name="title" required>
                <div class="invalid-feedback">Veuillez entrer un titre.</div>
            </div>
            <div class="mb-3">
                <label for="year" class="form-label fw-bold">Année de sortie</label>
                <input type="number" class="form-control" id="year" name="year" min="1888" max="2099" required>
                <div class="invalid-feedback">Veuillez entrer une année valide (1888-2099).</div>
            </div>
            <div class="mb-3">
                <label for="type" class="form-label fw-bold">Genre</label>
                <input type="text" class="form-control" id="type" name="type" required>
                <div class="invalid-feedback">Veuillez entrer un genre.</div>
            </div>
            <div class="mb-3">
                <label for="synopsis" class="form-label fw-bold">Résumé</label>
                <textarea class="form-control" id="synopsis" name="synopsis" rows="3" required></textarea>
                <div class="invalid-feedback">Veuillez entrer un résumé.</div>
            </div>
            <div class="mb-3">
                <label for="director" class="form-label fw-bold">Réalisateur</label>
                <input type="text" class="form-control" id="director" name="director" required>
                <div class="invalid-feedback">Veuillez entrer le nom du réalisateur.</div>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save"></i> Créer
                </button>
            </div>
        </form>
    </div>

{% endblock %}
